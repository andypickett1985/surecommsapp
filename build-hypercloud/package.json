{
  "name": "hypercloud",
  "version": "1.0.0",
  "description": "Hypercloud Desktop App",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build && electron-builder",
    "vite:dev": "vite",
    "electron:dev": "electron ."
  },
  "build": {
    "appId": "com.connectiontechnologies.hypercloud",
    "productName": "Hypercloud",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "src/pjsip/**/*",
      "dist-renderer/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "src/pjsip",
        "to": "pjsip"
      }
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false,
      "publisherName": "Connection Technologies"
    },
    "forceCodeSigning": false
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "tailwindcss": "^4.0.0",
    "vite": "^6.0.0",
    "wait-on": "^8.0.0"
  },
  "productName": "Hypercloud"
}